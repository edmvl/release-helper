<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2"> 
  <plugin-info> 
    <description>${project.description}</description>  
    <version>${project.version}</version>  
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>  
    <param name="plugin-icon">images/pluginIcon.png</param>  
    <param name="plugin-logo">images/pluginLogo.png</param> 
  </plugin-info>  
  <!-- add our i18n resource -->  
  <resource type="i18n" name="i18n" location="release-helper"/>  
  <!-- add our web resources -->  
  <web-resource key="release-helper-resources" name="release-helper Web Resources"> 
    <dependency>com.atlassian.auiplugin:ajs</dependency>  
    <resource type="download" name="release-helper.css" location="/css/release-helper.css"/>  
    <resource type="download" name="release-helper.js" location="/js/release-helper.js"/>  
    <resource type="download" name="images/" location="/images"/>  
    <context>release-helper</context> 
  </web-resource>  
  <web-panel name="Web Panel Forms" i18n-name-key="web-panel-form.name" key="web-panel-form" location="atl.jira.view.issue.left.context" weight="100"> 
    <description key="web-panel-form.description">Web Panel Forms</description>  
    <context-provider class="ru.zhendozzz.jira.model.ModelProvider"/>  
    <resource type="velocity" name="view" location="templates/viewTaskList.vm"/>  
    <supports-ajax-load>true</supports-ajax-load>  
    <condition class="ru.zhendozzz.jira.condition.VisibilityCondition" invert="false"/> 
  </web-panel>  
  <rest name="Release Controller" i18n-name-key="release-controller.name" key="release-controller" path="release" version="1.0">
    <description key="release-controller.description">The Release Controller Plugin</description> 
  </rest>
  <component-import key="ao" interface="com.atlassian.activeobjects.external.ActiveObjects"/>
  <ao key="ao-module">
    <entity>ru.zhendozzz.jira.ao.Config</entity>
  </ao>
  <component key="release-helper-config-service" class="ru.zhendozzz.jira.service.config.PluginConfigService" public="true">
    <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
  </component>
  <webwork1 key="worklog-config-webwork" name="Config webwork" class="java.lang.Object">
    <description>Configure worklog settings</description>
    <actions>
      <action name="ru.zhendozzz.jira.action.ConfigAction"
              alias="release-helper-config" roles-required="admin">
        <view name="input">/templates/config/release-helper-config.vm</view>
      </action>
    </actions>
  </webwork1>
  <web-section key="configure_fields_visibility_section" location="admin_issues_menu"
               name="Configure fields visibility section"/>
  <web-item key="configure_fields_visibility_section_link"
            section="admin_issues_menu/configure_fields_visibility_section" name="Configure fields visibility link"
            weight="800">
    <label key="release-helper.configure.manage.screen.label"/>
    <link linkId="configure_fields_visibility_link">/secure/release-helper-config!input.jspa</link>
  </web-item>
</atlassian-plugin>
